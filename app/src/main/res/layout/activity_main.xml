<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.gfc.gaidelclicker.MainActivity">


    <ImageButton
        android:text="ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonClicker"
        android:src="@drawable/click_gaidel"
        android:background="@null"
        android:layout_above="@+id/textView7"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:text="ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFactory"
        android:src="@drawable/factory_of_gaidel"
        android:background="@null"
        android:layout_marginStart="18dp"
        android:layout_above="@+id/textView7"
        android:layout_toEndOf="@+id/mainText" />



    <TextView
        android:text="Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/factories"
        android:textSize="32dp"
        android:layout_above="@+id/buttonFactory"
        android:layout_alignStart="@+id/buttonFactory" />

    <TextView
        android:text="Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clickers"
        android:textSize="32dp"
        android:layout_above="@+id/buttonClicker"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Цена:100"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonFactory" />

    <TextView
        android:text="Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/farms"
        android:textSize="32dp"
        android:layout_below="@+id/buttonGaidel"
        android:layout_alignStart="@+id/buttonFarm" />

    <TextView
        android:text="Цена 300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonFarm" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clicks"
        android:layout_marginTop="19dp"
        android:layout_marginStart="26dp"
        android:layout_below="@+id/mainText"
        android:layout_alignStart="@+id/factories" />

    <ImageButton
        android:text="ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFarm"
        android:src="@drawable/farm_of_gaidel"
        android:background="@null"
        android:layout_below="@+id/farms"
        android:layout_alignEnd="@+id/buttonGaidel"
        android:layout_marginEnd="24dp" />

    <TextView
        android:text="Цена:10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/svas"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/clicks"
        android:layout_alignEnd="@+id/buttonGaidel"
        android:layout_marginTop="40dp" />
    <ImageButton
        android:text="ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGaidel"
        android:src="@drawable/gaidel_face_pink"
        android:background="@null"
        android:layout_above="@+id/clickers"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Статистика"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonStat"
        android:layout_alignTop="@+id/clicks"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GaidelClicker!"

        android:id="@+id/mainText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:entries="@array/gaidellist"/>


</RelativeLayout>
